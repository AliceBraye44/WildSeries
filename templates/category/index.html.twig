{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les categories </h1>
    {% for category in categories %}
        <div>
            <a href="{{ path("category_show", { categoryName: category.name }) }}"><h3>{{ loop.index }} -  {{ category.name }}</h3></a>

            {# Lien vers la fiche de la série : #}
        </div>
    {% else %}
        Aucune categorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}"><button type="button" class="btn btn-primary">
        Retour à l'accueil</button>
    </a>
{% endblock %}