{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<h1> Fiche série </h1>
<div class="card mb-3" style="max-width: 80%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{program.poster}}" class="img-fluid rounded-start" alt="{{ program.title }}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="card-title">{{ program.title }}</h1>
            <p class="card-text">{{ program.summary }}</p>
            <p class="card-text">Catégorie : <a href="{{ path('category_index') }}">{{ program.category.name }}</a></p>
         </div>
        </div>
    </div>
</div>

    <a href="{{ path('program_index') }}"><button type="button" class="btn btn-primary">
        Retour à la liste des programmes</button>
    </a>
{% endblock %}