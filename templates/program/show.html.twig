{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<h1> Fiche série </h1>
<div class="card mb-3" style="max-width: 80%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{program.poster}}" class="img-fluid rounded-start" alt="{{ program.title }}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="card-title">{{ program.title }}</h1>
            <p class="card-text">{{ program.summary }}</p>
            <p class="card-text">Catégorie : <a href="{{ path('category_index') }}">{{ program.category.name }}</a></p>

            <h3>Saisons disponibles :</h3>
            {% for season in program.seasons %}
              <li> <a href="{{ path("program_season_show", {"program_id": program.id, "season_id": season.number })}}"> #{{season.number}} - {{season.description}} </a> </li>
             {% else %}
                <li>Aucune saison pour cette série</li>
            {% endfor %}

            <h3>Acteurs :</h3>
            <ul>
                {% for actor in program.actors %}
                    <li>{{ actor.name }} </li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
         </div>
        </div>
    </div>
</div>

    <a href="{{ path('program_index') }}"><button type="button" class="btn btn-primary">
        Retour à la liste des programmes</button>
    </a>
{% endblock %}